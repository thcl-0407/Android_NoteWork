<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_title_profileFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"
        android:paddingRight="25dp"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cabin_medium"
            android:text="Tài Khoản"
            android:textColor="#055948"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:padding="3dp"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:src="@drawable/ic_baseline_settings_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageButton>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingTop="20dp"
        android:paddingRight="35dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/container_title_profileFragment">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/ico_user_clip_art"></ImageView>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textAlignment="textEnd"
                android:id="@+id/tvHo_Profile"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cabin_medium"
                android:text="Họ"
                android:enabled="false"
                android:paddingRight="8dp"
                android:textColor="#353535"
                android:textSize="18sp"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/etHo_Profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cabin_medium"
                android:inputType="text"
                android:padding="5dp"
                android:background="@android:color/transparent"
                android:textColor="#353535"
                android:textSize="18sp"></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textAlignment="textEnd"
                android:id="@+id/tvTen_Profile"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cabin_medium"
                android:text="Tên"
                android:paddingRight="8dp"
                android:textColor="#353535"
                android:textSize="18sp"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/etTen_Profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cabin_medium"
                android:inputType="text"
                android:padding="5dp"
                android:enabled="false"
                android:background="@android:color/transparent"
                android:textColor="#353535"
                android:textSize="18sp"></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textAlignment="textEnd"
                android:id="@+id/tvEmail_Profile"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cabin_medium"
                android:text="Email"
                android:paddingRight="8dp"
                android:textColor="#353535"
                android:textSize="18sp"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/etEmail_Profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cabin_medium"
                android:inputType="text"
                android:textColor="#353535"
                android:padding="5dp"
                android:enabled="false"
                android:background="@android:color/transparent"
                android:textSize="18sp"></EditText>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>