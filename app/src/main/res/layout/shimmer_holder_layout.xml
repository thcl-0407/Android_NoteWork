<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:id="@+id/img_user_avatar"
        android:background="@drawable/circle_shimmer_avatar"></ImageView>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/img_user_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_round_shimmer_text_view"
        android:id="@+id/tv_first_name_shimmer" />

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/tv_first_name_shimmer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_round_shimmer_text_view"
        android:id="@+id/tv_last_name_shimmer" />

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/tv_last_name_shimmer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_round_shimmer_text_view"
        android:id="@+id/tv_email_shimmer" />
</androidx.constraintlayout.widget.ConstraintLayout>